<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools"
    android:id="@+id/camera_overlay_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/camera_overlay_found_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/camera_overlay_found_shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                app:theme="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Menu"

                app:backgroundTint="@color/Aqua" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/camera_overlay_found_heart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:layout_weight="1"


                app:backgroundTint="@color/red" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/camera_overlay_found_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:layout_weight="1"


                app:backgroundTint="@color/BurlyWood" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/camera_overlay_found_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"


                app:backgroundTint="@color/DarkGoldenrod" />
        </LinearLayout>


        <android.support.v7.widget.Toolbar
            android:id="@+id/action_bar_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/LightGrey">


            <Button
                android:id="@+id/camera_overlay_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/fa_low_vision"
                android:textSize="50sp" />


        </android.support.v7.widget.Toolbar>
    </LinearLayout>


</RelativeLayout>