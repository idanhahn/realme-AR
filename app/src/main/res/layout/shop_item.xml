<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shop_item_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:src="@drawable/logo_temp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/shop_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Title"
            />
        <TextView
            android:id="@+id/shop_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Type"
            />
        <ImageView
            android:id="@+id/shop_item_rating"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/stars4"/>
        <TextView
            android:id="@+id/shop_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/price_9_98_22_98"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/shop_item_buy"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/shopicon"
                />
            <ImageView
                android:id="@+id/shop_item_share"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/share"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
